{
  "manifest_version": 3,
  "name": "Gemma Explorer",
  "version": "3.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "marked.js",
        "helpers.js",
        "core/ui-builder.js",
        "core/ai-actions.js",
        "sites/reddit.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}