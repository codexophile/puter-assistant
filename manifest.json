{
  "manifest_version": 3,
  "name": "Reddit Puter Proxy",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.reddit.com/*",
    "https://*.puter.com/*",
    "https://puter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.reddit.com/*"
      ],
      "js": [
        "fetch-shim.js",
        "puter.js",
        "content.js"
      ]
    }
  ]
}